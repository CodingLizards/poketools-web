@using Coding.Lizards.Pokemon.Tools.Web.Models
@model LoginViewModel
@{
    ViewBag.Title = "Anmelden";
}
<div class="ui middle aligned center aligned grid">
    <div class="ui ten wide left aligned column stacked segment">
        <h2>@ViewBag.Title.</h2>
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "ui large form", role = "form" })) {
            @Html.AntiForgeryToken()
                <div class="field">
                    <div class="ui left icon input">
                        <i class="user icon"></i>
                        @Html.TextBoxFor(m => m.Email, new { placeholder = Html.DisplayNameFor(c => c.Email) })
                    </div>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        @Html.PasswordFor(m => m.Password, new { placeholder = Html.DisplayNameFor(c => c.Password) })
                    </div>
                </div>
                <button class="ui fluid large primary submit button" type="submit">Login</button>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}