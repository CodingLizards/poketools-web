@model Coding.Lizards.Pokemon.Tools.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrieren";
}
<div class="ui middle aligned center aligned grid">
    <div class="ui ten wide left aligned column stacked segment">
        <h2>@ViewBag.Title.</h2>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "ui large form", role = "form" })) {
            @Html.AntiForgeryToken()
            <div class="field">
                <div class="ui left icon input">
                    <i class="user icon"></i>
                    @Html.TextBoxFor(m => m.Email, new { placeholder = Html.DisplayNameFor(c => c.Email) })
                </div>
            </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        @Html.PasswordFor(m => m.Password, new { placeholder = Html.DisplayNameFor(c => c.Password) })
                    </div>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = Html.Raw(Html.DisplayNameFor(c => c.ConfirmPassword)) })
                    </div>
                </div>
                <button class="ui fluid large primary submit button" type="submit">Register</button>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
