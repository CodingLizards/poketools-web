@model ListUserViewModel

@{
    ViewBag.Title = Texts.User_List_Title;
}

<div class="ui stacked segment">
    <div class="ui secondary pointing menu">
        <div class="header item">@ViewBag.Title</div>
        <a class="right item" href="@Url.Action("Add")"><i class="add icon"></i> @Texts.User_List_Add</a>
    </div>
    <table class="ui compact striped table">
        <thead>
            <tr>
                <th>@Texts.User_List_Email</th>
                <th>@Texts.User_List_Username</th>
                <th>@Texts.User_List_Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.ActionLink(item.Email, "Details", new { id = item.Id })
                    </td>
                    <td>@item.UserName</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="ui tiny button"><i class="edit icon"></i> @Texts.User_List_Edit</a>
                        <a href="@Url.Action("Delete", new { id = item.Id })" class="ui tiny red button"><i class="trash icon"></i> @Texts.User_List_Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>