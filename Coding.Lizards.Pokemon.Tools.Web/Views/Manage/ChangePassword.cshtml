@model Coding.Lizards.Pokemon.Tools.Web.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Kennwort ändern";
}
<div class="ui middle aligned center aligned grid">
    <div class="ui ten wide left aligned column stacked segment">
        <h2>@ViewBag.Title.</h2>
        @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "ui left aligned form", role = "form" })) {
            @Html.AntiForgeryToken()
            <div class="field">
                @Html.LabelFor(m => m.OldPassword)
                @Html.PasswordFor(m => m.OldPassword)
            </div>
            <div class="field">
                @Html.LabelFor(m => m.NewPassword)
                @Html.PasswordFor(m => m.NewPassword)
            </div>
            <div class="field">
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
            </div>
            <button type="submit" class="ui primary success button">Change Password</button>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
