@model EditPokemonViewModel
@{
    ViewBag.Title = Texts.Pokemon_Edit_Title;
}

<div class="ui middle aligned center aligned grid">
    <div class="ui twelve wide left aligned column stacked segment">
        <div class="ui secondary pointing menu">
            <div class="header item">@ViewBag.Title</div>
        </div>
        @using (Html.BeginForm("Edit", "Pokemon", FormMethod.Post, new { @class = "ui form", role = "form", enctype = "multipart/form-data" })) {
            <div class="four fields">
                <div class="field">
                    <label for="@Html.IdFor(m => m.Item.Id)">#</label>
                    @Html.TextBoxFor(m => m.Item.Id)
                </div>
                <div class="field">
                    @Html.LabelFor(m => m.Item.EnglishName)
                    @Html.TextBoxFor(m => m.Item.EnglishName)
                </div>
                <div class="field">
                    @Html.LabelFor(m => m.Item.GermanName)
                    @Html.TextBoxFor(m => m.Item.GermanName)
                </div>
                <div class="field">
                    @Html.LabelFor(m => m.Item.FrenchName)
                    @Html.TextBoxFor(m => m.Item.FrenchName)
                </div>
            </div>
            <div class="two fields">
                <div class="field">
                    @Html.LabelFor(m => m.Item.FirstType)
                    @Html.EnumDropDownListFor(m => m.Item.FirstType)
                </div>
                <div class="field">
                    @Html.LabelFor(m => m.Item.SecondType)
                    @Html.EnumDropDownListFor(m => m.Item.SecondType)
                </div>
                <div class="field">
                    @Html.LabelFor(m => m.Item.ExperienceType)
                    @Html.EnumDropDownListFor(m => m.Item.ExperienceType)
                </div>
            </div>
            <div class="two fields">
                <div class="field">
                    @Html.LabelFor(m => m.Item.Thumbnail)
                    <div class="ui action input">
                        <input type="text" readonly placeholder="" id="thumbnail_text" />
                        <button data-action="openfile" type="button" data-target="#@Html.IdFor(m => m.Item.Thumbnail)" data-textbox="#thumbnail_text" class="ui button">...</button>
                    </div>
                    <input style="display: none;" accept="image/*" type="file" name="Thumbnail" id="@Html.IdFor(m => m.Item.Thumbnail)" />
                </div>
                <div class="field">
                    @Html.LabelFor(m => m.Item.Sprite)
                    <div class="ui action input">
                        <input type="text" readonly placeholder="" id="sprite_text" />
                        <button data-action="openfile" type="button" data-target="#@Html.IdFor(m => m.Item.Sprite)" data-textbox="#sprite_text" class="ui button">...</button>
                    </div>
                    <input style="display: none;" accept="image/*" type="file" name="Sprite" id="@Html.IdFor(m => m.Item.Sprite)" />
                </div>
            </div>
            <h4 class="ui dividing header">@Texts.Pokemon_Edit_BaseValues</h4>
            <div class="four fields">
                <div class="field">
                    @Html.LabelFor(m => m.Item.BaseExperience)
                    @Html.TextBoxFor(m => m.Item.BaseExperience)
                </div>
                <div class="field">
                    @Html.LabelFor(m => m.Item.BaseHealth)
                    @Html.TextBoxFor(m => m.Item.BaseHealth)
                </div>
                <div class="field">
                    @Html.LabelFor(m => m.Item.BaseAttack)
                    @Html.TextBoxFor(m => m.Item.BaseAttack)
                </div>
                <div class="field">
                    @Html.LabelFor(m => m.Item.BaseDefense)
                    @Html.TextBoxFor(m => m.Item.BaseDefense)
                </div>
            </div>
            <div class="three fields">
                <div class="field">
                    @Html.LabelFor(m => m.Item.BaseSpecialAttack)
                    @Html.TextBoxFor(m => m.Item.BaseSpecialAttack)
                </div>
                <div class="field">
                    @Html.LabelFor(m => m.Item.BaseSpecialDefense)
                    @Html.TextBoxFor(m => m.Item.BaseSpecialDefense)
                </div>
                <div class="field">
                    @Html.LabelFor(m => m.Item.BaseSpeed)
                    @Html.TextBoxFor(m => m.Item.BaseSpeed)
                </div>
            </div>
            <div class="ui right floated buttons">
                <a href="/user" class="ui button">@Texts.Pokemon_Edit_Cancel</a>
                <div class="or" data-text="@Texts.Or"></div>
                <button type="submit" class="ui animated submit primary button">
                    <div class="visible content">@Texts.Pokemon_Edit_Submit</div>
                    <div class="hidden content">
                        <i class="right save icon"></i>
                    </div>
                </button>
            </div>
        }
    </div>
</div>
@section scripts {
    <script>
        $('select').dropdown();
        $('[data-action=openfile]').click(function () {
            var $this = $(this);
            var $target = $($this.data('target'));
            var $textbox = $($this.data('textbox'));
            $target.click();
            $textbox.val($target.val());
        });
    </script>
}